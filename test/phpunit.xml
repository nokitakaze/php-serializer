<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" strict="true"
         timeoutForSmallTests="15"
         timeoutForMediumTests="15"
         timeoutForLargeTests="60">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <file>../src/Serializer.php</file>
        </whitelist>
        <blacklist>
            <directory suffix=".php">../vendor</directory>
            <file>../src/phpdoc.php</file>
            <file>../src/ISerializable.php</file>
        </blacklist>
    </filter>
</phpunit>